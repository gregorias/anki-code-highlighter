#!/usr/bin/env bash

TARGET_PATH=codehighlighter.ankiaddon
TARGET_PATH=$(readlink -f ${TARGET_PATH})

rm -f "${TARGET_PATH}" && \
zip "${TARGET_PATH}" -j \
  codehighlighter/*.py \
  codehighlighter/config.json \
  codehighlighter/manifest.json && \
pushd codehighlighter
zip -r "${TARGET_PATH}" icons/*.png
popd
zip -r "${TARGET_PATH}" \
  assets
TARGET_PATH=$(readlink -f ${TARGET_PATH})
pushd pydeps/pygments
zip -r "${TARGET_PATH}" \
  pygments
popd
