#!/bin/bash
# Bumps the version.

set -euo pipefail

# Ask for the version bump type using Gum
echo "Current version: $(bump-my-version show current_version)"
echo "Choose the version bump:"
version_type=$(gum choose "patch" "release")
bump-my-version bump $version_type --commit --tag

new_version=$(bump-my-version show current_version)

git push
git push origin v$new_version

echo "âœ… Version $new_version bumped and pushed successfully!"

